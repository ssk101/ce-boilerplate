doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no, minimal-ui')
    meta(name='mobile-web-app-capable', content='yes')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    style.
      html {
        margin: 0;
        padding: 0;
        font-family: 'Open Sans', sans-serif;
      }
      html, body {
        height: 100%;
      }
      body {
        background: #1a1a1a;
        color: #fff;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      main {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100%;
        max-width: 1440px;
      }
  body
    ce-viewport
    script(src='/application.js')&attributes(ceConfig())
